.payment-container {
  background-color: #f7f8fa;
  min-height: 100vh;
  padding-bottom: 100px;
}

.order-summary {
  padding: 16px;
  background-color: #fff;
}

.package-name {
  font-size: 16px;
  font-weight: 500;
  color: #323233;
  margin-bottom: 8px;
}

.booking-info,
.customer-info {
  font-size: 14px;
  color: #646566;
  margin-bottom: 4px;
}

.payment-option {
  display: flex;
  align-items: center;
  width: 100%;
}

.option-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.option-title {
  font-size: 16px;
  color: #323233;
  margin-bottom: 4px;
}

.option-desc {
  font-size: 12px;
  color: #969799;
}

.option-amount {
  font-size: 16px;
  font-weight: bold;
  color: #ee0a24;
  margin-right: 12px;
}

.payment-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 16px;
  box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.1);
}

.payment-summary {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.payment-label {
  font-size: 16px;
  color: #323233;
}

.payment-amount {
  font-size: 20px;
  font-weight: bold;
  color: #ee0a24;
}

.pay-button {
  width: 100% !important;
  border-radius: 8px !important;
}
